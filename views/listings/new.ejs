<% layout('layouts/boilerplate.ejs') %>

<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h3 class="mb-0">Create a New Listing!</h3>
        </div>
        <div class="card-body">
          <form
            action="/listings/"
            method="POST"
            novalidate
            class="needs-validation"
            enctype="multipart/form-data"
          >
            <div class="row">
              <div class="col-md-8 mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                  type="text"
                  name="listing[title]"
                  id="title"
                  placeholder="Add a catchy title"
                  class="form-control"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Enter a Title for your place</div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="category" class="form-label">Category</label>
                <select
                  name="listing[category]"
                  id="category"
                  class="form-control"
                  required
                >
                  <option value="">Select category</option>
                  <option value="Apartment">Apartment</option>
                  <option value="House">House</option>
                  <option value="Villa">Villa</option>
                  <option value="Cabin">Cabin</option>
                  <option value="Condo">Condo</option>
                  <option value="Studio">Studio</option>
                  <option value="Other">Other</option>
                </select>
                <div class="invalid-feedback">Please select a category</div>
              </div>
            </div>

            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                name="listing[description]"
                id="description"
                class="form-control"
                rows="4"
                placeholder="Describe your property..."
                required
              ></textarea>
              <div class="invalid-feedback">
                Give short description about your place
              </div>
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
              <label for="image" class="form-label">Upload Listing Image</label>
              <input
                type="file"
                name="listing[image]"
                id="image"
                class="form-control"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label for="price" class="form-label"
                  >Price per Night (â‚¹)</label
                >
                <input
                  type="number"
                  name="listing[price]"
                  id="price"
                  class="form-control"
                  min="0"
                  required
                />
                <div class="invalid-feedback">Enter a valid price</div>
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="capacity" class="form-label">Max Guests</label>
                <input
                  type="number"
                  name="listing[capacity]"
                  id="capacity"
                  class="form-control"
                  min="1"
                  value="2"
                  required
                />
                <div class="invalid-feedback">Enter number of guests</div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="bedrooms" class="form-label">Bedrooms</label>
                <input
                  type="number"
                  name="listing[bedrooms]"
                  id="bedrooms"
                  class="form-control"
                  min="0"
                  value="1"
                  required
                />
                <div class="invalid-feedback">Enter number of bedrooms</div>
              </div>
            </div>

            <div class="row">
              <div class="col-md-4 mb-3">
                <label for="bathrooms" class="form-label">Bathrooms</label>
                <input
                  type="number"
                  name="listing[bathrooms]"
                  id="bathrooms"
                  class="form-control"
                  min="0"
                  value="1"
                  required
                />
                <div class="invalid-feedback">Enter number of bathrooms</div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="country" class="form-label">Country</label>
                <input
                  type="text"
                  name="listing[country]"
                  id="country"
                  placeholder="Enter country"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Enter a valid country</div>
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="col-md-4 mb-3">
                <label for="location" class="form-label">Location</label>
                <input
                  type="text"
                  name="listing[location]"
                  id="location"
                  placeholder="Enter location"
                  class="form-control"
                  required
                />
                <div class="invalid-feedback">Enter a valid location</div>
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>

            <div class="mb-3">
              <label class="form-label">Amenities</label>
              <div class="row">
                <div class="col-md-4">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="WiFi"
                      id="wifi"
                    />
                    <label class="form-check-label" for="wifi">WiFi</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Kitchen"
                      id="kitchen"
                    />
                    <label class="form-check-label" for="kitchen"
                      >Kitchen</label
                    >
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Washing Machine"
                      id="washing"
                    />
                    <label class="form-check-label" for="washing"
                      >Washing Machine</label
                    >
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Air Conditioning"
                      id="ac"
                    />
                    <label class="form-check-label" for="ac"
                      >Air Conditioning</label
                    >
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Heating"
                      id="heating"
                    />
                    <label class="form-check-label" for="heating"
                      >Heating</label
                    >
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="TV"
                      id="tv"
                    />
                    <label class="form-check-label" for="tv">TV</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Parking"
                      id="parking"
                    />
                    <label class="form-check-label" for="parking"
                      >Parking</label
                    >
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Gym"
                      id="gym"
                    />
                    <label class="form-check-label" for="gym">Gym</label>
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Pool"
                      id="pool"
                    />
                    <label class="form-check-label" for="pool">Pool</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Garden"
                      id="garden"
                    />
                    <label class="form-check-label" for="garden">Garden</label>
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Balcony"
                      id="balcony"
                    />
                    <label class="form-check-label" for="balcony"
                      >Balcony</label
                    >
                  </div>
                  <div class="form-check">
                    <input
                      class="form-check-input"
                      type="checkbox"
                      name="listing[amenities]"
                      value="Pet Friendly"
                      id="pet"
                    />
                    <label class="form-check-label" for="pet"
                      >Pet Friendly</label
                    >
                  </div>
                </div>
              </div>
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus"></i> Create Listing
              </button>
              <a href="/listings" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Listings
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
