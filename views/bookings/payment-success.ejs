<% layout('layouts/boilerplate.ejs') %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card text-center">
        <div class="card-body py-5">
          <div class="mb-4">
            <i
              class="fas fa-check-circle text-success"
              style="font-size: 4rem"
            ></i>
          </div>

          <h3 class="text-success mb-3">Payment Successful!</h3>
          <p class="text-muted mb-4">
            Your booking has been confirmed and payment has been processed
            successfully.
          </p>

          <div class="card bg-light mb-4">
            <div class="card-body">
              <h6>Booking Details</h6>
              <div class="row text-start">
                <div class="col-6">
                  <small class="text-muted">Transaction ID</small><br />
                  <strong><%= transactionId %></strong>
                </div>
                <div class="col-6">
                  <small class="text-muted">Amount Paid</small><br />
                  <strong class="text-primary"
                    >â‚¹<%= amount.toLocaleString("en-IN") %></strong
                  >
                </div>
              </div>
              <div class="row text-start mt-2">
                <div class="col-6">
                  <small class="text-muted">Payment Method</small><br />
                  <strong
                    ><%= paymentMethod.charAt(0).toUpperCase() +
                    paymentMethod.slice(1) %></strong
                  >
                </div>
                <div class="col-6">
                  <small class="text-muted">Date</small><br />
                  <strong><%= new Date().toLocaleDateString() %></strong>
                </div>
              </div>
            </div>
          </div>

          <div class="d-grid gap-2">
            <a href="/bookings" class="btn btn-primary">
              <i class="fas fa-calendar"></i> View My Bookings
            </a>
            <a href="/listings" class="btn btn-outline-secondary">
              <i class="fas fa-search"></i> Browse More Listings
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
